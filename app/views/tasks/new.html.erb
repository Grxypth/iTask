<!-- app/views/tasks/new.html.erb -->
<div class="flex items-center justify-center min-h-screen bg-gray-100 dark:bg-gray-900">
  <div class="bg-white dark:bg-gray-800 p-8 rounded-lg shadow-lg w-full max-w-md">
    <h1 class="text-2xl font-bold mb-6 text-gray-900 dark:text-gray-100">Yeni İş Ekle</h1>
    <%= form_with(model: @task, local: true) do |form| %>
      <% if @task.errors.any? %>
        <div id="error_explanation" class="mb-4 p-4 bg-red-100 text-red-700 rounded-lg">
          <h2 class="text-lg font-semibold"><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>
          <ul class="mt-2 list-disc list-inside">
            <% @task.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div class="mb-4">
        <%= form.label :title, class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
        <%= form.text_field :title, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:text-gray-300" %>
      </div>
      <div class="mb-4">
        <%= form.label :description, class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
        <%= form.text_area :description, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:text-gray-300" %>
      </div>
      <div class="mb-4">
        <%= form.label :category_id, class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
        <%= form.collection_select :category_id, Category.all, :id, :name, {}, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:text-gray-300" %>
      </div>
      <div class="mb-4">
        <%= form.label :priority, class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
        <%= form.select :priority, Task.priorities.keys.map { |w| [w.humanize, w] }, {}, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:text-gray-300" %>
      </div>
      <div class="mb-4">
        <%= form.label :status, class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
        <%= form.select :status, Task.statuses.keys.map { |w| [w.humanize, w] }, {}, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:text-gray-300" %>
      </div>
      <div class="mb-4">
        <%= form.label :due_date, class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
        <%= form.date_field :due_date, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:text-gray-300" %>
      </div>
      <div class="actions">
        <%= form.submit "Kaydet", class: "w-full py-2 px-4 bg-blue-600 text-white font-semibold rounded-md shadow-sm hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 dark:bg-blue-500 dark:hover:bg-blue-600" %>
      </div>
    <% end %>
  </div>
</div>